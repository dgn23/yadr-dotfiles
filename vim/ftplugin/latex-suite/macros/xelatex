\newcommand{\sq}[1]{`#1'} %proper opened-closed single quotation marks
\newcommand{\dq}[1]{``#1"} %proper opened-closed double quotation marks
\newcommand{\sset}{\subseteq} % subset (with under-bar)
\newcommand{\psset}{\subset} % proper subset (no under-bar)
\newcommand{\set}[2]{\left\{#1\colon#2\right\}} % set builder: {F(x) : x in a} = \set{f(x)}{x\in A}
\newcommand{\ntuple}[2]{{\sf #1}$_{1}$,\ldots,{\sf #1}$_{#2}$} % N-tupes: \ntupe{First}{Last} 


%%%%%%%%%%%% JGM DEFINITIONS FOR LOGICAL SYMBOLS %%%%%%%%%%%%%%%%
\newcommand{\cond}{\supset} %% horseshoe
\newcommand{\bicond}{\equiv} %%% triple-bar equivalence
\newcommand{\corner}[1]{\ulcorner#1\urcorner} %corner quotes
\newcommand{\tuple}[1]{\langle#1\rangle} %put in pointy braces
\newcommand{\riota}{\mathrm{\rotatebox[origin=c]{180}{$\iotaup$}}} %%% Russell's upside-down iota


\title{TITLE}
\author{Dustin Neuman}
\date{DATE}                                           


\pretitle{\begin{flushleft}\Huge\sffamily\upshape} % makes document title flush left
	\posttitle{\vspace{5mm}\end{flushleft}}
\preauthor{\begin{flushleft}\Large\sffamily\vspace{-8pt}} % makes author flush left
	\postauthor{\end{flushleft}}
\predate{\begin{flushleft}\large\sffamily\vspace{-9pt}} % makes date title flush left
	\postdate{\end{flushleft}}

\renewcommand{\abstractname}{Summary}
\renewcommand{\absnamepos}{center} % makes word ``Abstract'' flushright
%\setlength{\absrightindent}{2pt} % makes abstract go all the way to right
%\setlength{\absleftindent}{2pt} % makes abstract skip the left quarter of page
\renewcommand{\abstracttextfont}{\sffamily\small\flushleft} % makes the abstract text flush right -- very ugly, don't do this!

\renewenvironment{abstract}
 {\small
  \begin{center}
  \bfseries \abstractname\vspace{-.5em}\vspace{0pt}
  \end{center}
  \list{}{
    \setlength{\leftmargin}{.5cm}%
    \setlength{\rightmargin}{\leftmargin}%
  }%
  \item\relax}
 {\endlist}

\setlength{\droptitle}{-35pt}

\begin{document}
\maketitle


